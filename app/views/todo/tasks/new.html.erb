<div class="Todo">

  <%= render 'todo/tasks/navbar' %>

  <div class="container">
    <h1>New Todo Task</h1>

    <%= form_with(model: @todo_task, local: true, class:'form-horizontal') do |form| %>
        <%= render 'form', {todo_task: @todo_task, form: form} %>

        <div class='form-group'>
          <div class='col-sm-offset-2 col-sm-10'>
            <%= form.button 'Create', class:'btn btn-default' %>
            <%= link_to 'Back', todo_tasks_path ,class:'btn btn-default'%>
          </div>
        </div>
    <% end %>
  </div>
</div>
