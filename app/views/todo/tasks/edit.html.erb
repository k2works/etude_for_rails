<div class="Todo">

  <%= render 'todo/tasks/navbar' %>

  <h1>Editing Task</h1>

  <%= form_with(model: @todo_task, local: true, class:'form-horizontal') do |form| %>
      <%= render 'form', {todo_task: @todo_task, form: form} %>

      <div class="form-group">
        <%= form.label :status, '', class: 'control-label col-sm-2' %>
        <div class="col-sm-10">
          <%= form.select(:status, options_for_select([
                                                          ['NOT_YET',0],
                                                          ['DONE',1],
                                                          ['PENDING',2]
                                                      ], @todo_task.status
          )) %>
        </div>
      </div>


      <div class='form-group'>
        <div class='col-sm-offset-2 col-sm-10'>
          <%= form.button 'Update', class:'btn btn-default' %>
        </div>
      </div>
  <% end %>

</div>
