<% if todo_task.errors.any? %>
    <div id="error_explanation" class='alert alert-danger'>
      <ul>
        <% todo_task.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
      </ul>
    </div>
<% end %>

<div class="form-group">
  <%= form.label :name, '', class: 'control-label col-sm-2' %>
  <div class="col-sm-4">
    <%= form.text_field :name, id: :todo_task_name, class: 'form-control', placeholder:"お名前を入力" %>
  </div>
</div>

<div class="form-group">
  <%= form.label :content, '', class: 'control-label col-sm-2' %>
  <div class="col-sm-10">
    <%= form.text_field :content, id: :todo_task_content, class: 'form-control', placeholder:"牛乳を買う" %>
  </div>
</div>

