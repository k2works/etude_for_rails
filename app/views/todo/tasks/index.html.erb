<p id="notice"><%= notice %></p>

<h1>Todo Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Content</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todo_tasks.each do |todo_task| %>
      <tr>
        <td><%= todo_task.name %></td>
        <td><%= todo_task.content %></td>
        <td><%= todo_task.status %></td>
        <td><%= link_to 'Show', todo_task %></td>
        <td><%= link_to 'Edit', edit_todo_task_path(todo_task) %></td>
        <td><%= link_to 'Destroy', todo_task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Todo Task', new_todo_task_path %>
