<div class="Todo">

  <%= render 'todo/tasks/navbar' %>

  <div class="container">
    <h1>Listing Tasks</h1>

    <div><%= link_to('New', new_todo_task_path) %></div>
    <table class="table table-striped table-hover table-bordered">
      <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Content</th>
        <th>Status</th>
        <th>Created Time</th>
        <th>Action</th>
      </tr>
      </thead>
      <tbody>
      <% @todo_tasks.each do |task| %>
          <tr>
            <td><%= task.id %></td>
            <td><%= task.name %></td>
            <td><%= task.content %></td>
            <td><%= task.status_name %></td>
            <td><%= task.created_at.strftime('%Y/%m/%d %H:%M:%S') %></td>
            <td><%= link_to 'Edit' ,edit_todo_task_path(task) %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>

</div>