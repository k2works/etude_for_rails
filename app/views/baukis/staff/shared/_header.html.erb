<header>
  <%= link_to 'BAUKIS', :baukis_staff_root, class: 'logo-mark' %>
  <%= content_tag(:span, flash.notice, class: 'notice') if flash.notice %>
  <%= content_tag(:span, flash.alert, class: 'alert') if flash.alert %>
  <%=
    if current_staff_member
      link_to 'ログアウト', :baukis_staff_session, method: :delete
    else
      link_to 'ログイン', :baukis_staff_login
    end
  %>
  <%= link_to 'アカウント', :baukis_staff_account if current_staff_member %>
  <%= number_of_unprocessed_messages if current_staff_member %>
</header>